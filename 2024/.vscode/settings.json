{
	"editor.formatOnSave": true,
	"editor.formatOnPaste": true,
	"biome.enabled": false,
	"prettier.enable": false,
	"[typescript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"todo-tree.filtering.excludeGlobs": [
		"**/node_modules/*/**",
		"**/src/template/**"
	],
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"**/node_modules": true
	}
}